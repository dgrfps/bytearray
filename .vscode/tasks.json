{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "COMPILAR",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}\\src\\*.cpp",
				"-o",
				" ${workspaceFolder}\\release\\cfilebuf.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compilador: C:/Librarys/MinGW/bin/g++.exe"
		}
	]
}